<%= simple_form_for @product do |f| %>
	<%=f.input :name, label: 'Product name' %>
	<%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category")%>
	<%= f.file_field :image %>
	<%=f.input :price %>
	<%= f.input :status %>
	<%= f.button :submit , label: 'Save product', class: "btn-custom2" %>
<% end %>
