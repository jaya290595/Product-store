<%= simple_form_for ([@product, @product.reviews.build] )do |f| %>
	<div id="rating-form">
	  <label> Rating </label>
	</div>

	<%= f.input :comment %>
	<%= f.button :submit ,label: 'Add review', class: "btn-custom2" %>
<% end %>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>
